<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <!-- 关于我们页面 -->

    <include
        android:id="@+id/title_bar"
        layout="@layout/item_layout_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/icon_buttom"
                android:layout_marginTop="@dimen/icon_top"
                android:src="@drawable/icon" />

            <FrameLayout
                android:id="@+id/fl_content"
                android:padding="@dimen/bt_margin_left_and_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\t德国国家队勒夫告诫全队在接下来的欧洲杯预选赛不可轻敌，在队长施魏因斯泰格因伤缺席的情况下，诺伊尔在这两场比赛将担任场上队长。勒夫还表示，自己会注意保障球员和俱乐部的利益，不招格罗斯克罗伊茨就是和多特蒙德主帅克洛普协商后的决定。" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>