<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_ten"
            android:background="@drawable/login_edit_background"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/input_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/input_left_size" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:gravity="center"
                    android:text="手机号码"
                    android:textColor="@color/color_tv_left"
                    android:textSize="@dimen/font_size_tv_left" />

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_marginRight="@dimen/dp_five"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请填写手机号码"
                    android:inputType="phone"
                    android:imeOptions="actionDone"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textColorHint="@color/color_et_hint"
                    android:textSize="@dimen/font_size_tv_left"
                    android:windowSoftInputMode="stateHidden" />

                <ImageButton
                    android:id="@+id/ib_clear_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/clear_right_size"
                    android:background="@drawable/btclose_bgdown" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="@dimen/input_left_size"
                android:background="@drawable/listview_split_line" />

            <RelativeLayout
                android:id="@+id/rl_select_momey"
                style="@style/bt_style"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/input_height"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bt_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_momey"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:gravity="center"
                    android:text="100元(售价:99.98)"
                    android:textColor="@color/color_tv_left"
                    android:textSize="@dimen/font_size_tv_left" />

                <TextView
                    android:id="@+id/tv_momey2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/clear_right_size"
                    android:drawableRight="@drawable/arrow"
                    android:text="98.00元  "
                    android:textColor="@color/color_momey"
                    android:textSize="@dimen/font_size_tv_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_momey2"
                    android:text="售价： "
                    android:textColor="@color/color_tv_left"
                    android:textSize="@dimen/font_size_tv_left" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>