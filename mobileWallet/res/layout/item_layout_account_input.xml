<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_ten"
            android:background="@drawable/login_edit_background"
            android:orientation="vertical"
            android:paddingLeft="@dimen/input_left_size" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/input_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:gravity="center"
                    android:text="身份证"
                    android:textColor="@color/color_tv_left"
                    android:textSize="@dimen/font_size_tv_left" />

                <EditText
                    android:id="@+id/et_idcard"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_marginRight="@dimen/dp_five"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入身份证号码"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColorHint="@color/color_et_hint"
                    android:textSize="@dimen/font_size_tv_left"
                    android:windowSoftInputMode="stateHidden" />

                <ImageButton
                    android:id="@+id/ib_clear_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/clear_right_size"
                    android:background="@drawable/btclose_bgdown" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="@dimen/dp_five"
                android:background="@drawable/listview_split_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/input_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:gravity="center"
                    android:text="姓    名"
                    android:textColor="@color/color_tv_left"
                    android:textSize="@dimen/font_size_tv_left" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_marginRight="@dimen/dp_five"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColorHint="@color/color_et_hint"
                    android:textSize="@dimen/font_size_tv_left"
                    android:windowSoftInputMode="stateHidden" />

                <ImageButton
                    android:id="@+id/ib_clear_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/clear_right_size"
                    android:background="@drawable/btclose_bgdown" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>